    function requestCode() {
        if ($('#two_factor_method').val() == 'google') {
            verifyGoogleCode();
            return false;
        }
        
        if ($('#two_factor_method').val() == 'authy') {
            <?php if (empty($wo['setting']['authy_id'])) { ?>
              $('#authy_modal').modal({
               show: true
